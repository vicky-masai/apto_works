							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/tasks?category=Testing&minPrice=10&maxPrice=50&difficulty=Medium&sortBy=price&sortOrder=desc&page=1&search=mobile",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"tasks"
							],
							"query": [
								{
									"key": "category",
									"value": "Testing",
									"description": "Filter by category (Registration, Social Media, Testing, Content Creation, Other)"
								},
								{
									"key": "minPrice",
									"value": "10",
									"description": "Minimum price filter"
								},
								{
									"key": "maxPrice",
									"value": "50",
									"description": "Maximum price filter"
								},
								{
									"key": "difficulty",
									"value": "Medium",
									"description": "Filter by difficulty (Easy, Medium, Hard)"
								},
								{
									"key": "sortBy",
									"value": "price",
									"description": "Sort by field (price, title, createdAt)"
								},
								{
									"key": "sortOrder",
									"value": "desc",
